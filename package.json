{
    "name": "botsimon",
    "version": "1.0.0",
    "description": "Microsoft 365 Agents Toolkit echo bot sample",
    "engines": {
        "node": "18 || 20 || 22"
    },
    "author": "Microsoft",
    "license": "MIT",
    "main": "./lib/index.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev:teamsfx:testtool": "env-cmd --silent -f .localConfigs.playground npm run dev",
        "dev:teamsfx:launch-testtool": "env-cmd --silent -f env/.env.playground teamsapptester start",
        "dev": "nodemon --exec node --inspect=9239 --signal SIGINT -r ts-node/register ./index.ts",
        "build": "tsc --build",
        "start": "node ./lib/index.js",
        "watch": "nodemon --exec \"npm run start\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "@azure/functions": "^4.7.2-preview",
        "@azure/storage-blob": "^12.28.0",
        "@microsoft/agents-activity": "^1.0.0",
        "@microsoft/agents-hosting": "^0.2.14",
        "@microsoft/microsoft-graph-client": "^3.0.7",
        "@types/node-fetch": "^2.6.13",
        "dotenv": "^17.2.1",
        "express": "^5.0.1",
        "node-fetch": "^2.7.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^18.0.0",
        "env-cmd": "^10.1.0",
        "nodemon": "^3.1.7",
        "shx": "^0.3.3",
        "ts-node": "^10.4.0",
        "typescript": "^5.9.2"
    }
}
